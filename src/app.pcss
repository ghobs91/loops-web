*,
*::before,
*::after {
	box-sizing: border-box;
}

:root {
	height: 100%;

	--muted-clr: rgb(255 255 255 / 0.75);
}

body {
	background-color: black;
	color: white;
	color-scheme: dark;
	font-family: 'DM Sans', system-ui, Roboto, sans-serif;
	height: 100%;
	margin: 0;
}

img {
	display: block;
	max-width: 100%;
}
